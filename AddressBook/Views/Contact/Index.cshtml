@model IEnumerable<AddressBook.Models.Contact>
@{
    ViewBag.Title = "Index";


    if (Session["userId"] == null)
    {
        Response.Redirect("~/Account/Login");
    }
}

<h2>Contacts</h2>

<hr />

<div>
    @Html.ActionLink("Add Contcats", "Create", "Contact", new { @class = "btn btn-primary btn-sm" })
</div>

<hr />

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var contacts in Model)
                {
                    <tr>
                        <td>@contacts.FirstName</td>
                        <td>@contacts.LastName</td>
                        <td>@contacts.PhoneNumber</td>
                        <td>
                            @Html.ActionLink("View","Show","Contact",new { Id = contacts.Id},null) ||
                            @Html.ActionLink("Edit","Edit","Contact", new { Id = contacts.Id },null) ||
                            @Html.ActionLink("Delete","Delete","Contact", new { Id = contacts.Id },null )
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
