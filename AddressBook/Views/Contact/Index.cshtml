@model IEnumerable<AddressBook.Models.Contact>
@{
    ViewBag.Title = "Index";
}

<h2>Contacts</h2>

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var contacts in Model)
                {
                    <tr>
                        <td>@contacts.FirstName</td>
                        <td>@contacts.LastName</td>
                        <td>@contacts.PhoneNumber</td>
                        <td>View    Edit    Delete</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
